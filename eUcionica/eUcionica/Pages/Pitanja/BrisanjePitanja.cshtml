@page
@model eUcionica.Pages.Pitanja.BrisanjePitanjaModel
@{
    ViewData["Title"] = "Brisanje pitanja";
}

<div style="background-color: #161d26; padding: 20px; width:800px; margin-left:250px">
    <h3>Brisanje pitanja</h3>

    <h5>Da li ste sigurni da želite da obrišete ovo pitanje?</h5>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Predmet
            </dt>
            <dd class="col-sm-10">
                @if (Model.Pitanje?.Predmet != null)
                {
                    @Model.Pitanje.Predmet.NazivPredmeta
                }
            </dd>
            <dt class="col-sm-2">
                Oblast
            </dt>
            <dd class="col-sm-10">
                @if (Model.Pitanje?.Oblast != null)
                {
                    @Model.Pitanje.Oblast.Name
                }
            </dd>
            <dt class="col-sm-2">
                Nivo težine
            </dt>
            <dd class="col-sm-10">
                @Model.Pitanje?.NivoTezine
            </dd>
            <dt class="col-sm-2">
                Postavka pitanja
            </dt>
            <dd class="col-sm-10">
                @Model.Pitanje?.PitanjeText
            </dd>
            <dt class="col-sm-2">
                Odgovor
            </dt>
            <dd class="col-sm-10">
                @Model.Pitanje?.TacanOdgovor
            </dd>
        </dl>

        <form method="post">
            @if (Model.Pitanje != null)
            {
                <input type="hidden" name="Pitanje.ID" value="@Model.Pitanje.ID" />
            }




            <input type="submit" value="Obriši" class="btn btn-danger" />
            <a asp-page="./SpisakPitanja" class="btn btn-secondary">Odustani</a>
        </form>
    </div>
</div>