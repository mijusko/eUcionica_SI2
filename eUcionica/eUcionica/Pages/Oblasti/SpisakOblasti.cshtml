@page
@model eUcionica.Pages.Oblasti.SpisakOblastiModel
@{
    ViewData["Title"] = "Spisak oblasti";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="mb-3 d-flex justify-content-between">
    <h2>Spisak svih oblasti</h2>
    <form method="post" class="form-inline">
        <div class="input-group">
            <input type="text" class="form-control" asp-for="SearchText" placeholder="Pretraga..." style="width:400px">
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary ml-1" style=" display: block;
        width: 100px;
        height: 50px;
        background-color: #2396fa;
        border: 2px solid #2396fa;
        color: white;
        text-align: center;
        line-height: 16x;
        font-size: 16px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        padding: 10px;">
                    Pretraži
                </button>
            </div>
        </div>
    </form>
    <div class="btn-group ml-1">
        <a asp-page="DodavanjeOblasti" class="btn btn-primary" style=" display: block;
        width: 200px;
        height: 50px;
        background-color: #2396fa;
        border: 2px solid #2396fa;
        color: white;
        text-align: center;
        line-height: 16x;
        font-size: 16px;
        text-decoration: none;
        font-weight: bold;
        border-radius: 5px;
        padding: 10px;">Dodavanje oblasti</a>
    </div>
</div>

<table class="table table-striped" style="width:900px; margin: auto;">
    <thead>
        <tr>
            <th>Oblast predmeta</th>
            <th>Predmet</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Oblast)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@(item.Predmet != null ? item.Predmet.NazivPredmeta : "N/A")</td>
                <td style="display: flex; justify-content: end;">
                    <div class="btn-group">
                        <a asp-page="./MenjanjeOblasti" asp-route-id="@item.ID" class="btn btn-info">Izmeni</a>
                        <span style="padding: 0 5px;"></span>
                        <a asp-page="./DetaljiOblasti" asp-route-id="@item.ID" class="btn btn-info">Detalji</a>
                        <span style="padding: 0 5px;"></span>
                        <a asp-page="./BrisanjeOblasti" asp-route-id="@item.ID" class="btn btn-danger">Obriši</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    td {
        font-size: 20px;
        color: white;
    }
</style>